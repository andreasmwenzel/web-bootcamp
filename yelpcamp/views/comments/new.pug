extends ../partials/layout
block styles
    link(rel="stylesheet", href="../../../css/new.css")
        
block content
    
    .container
        h1.h3.my-4 Add new comment #{campground.name}
        
        form(action="/campgrounds/" +campground._id +"/comments", method="post")
            .form-group
                input(type="text", name="comment[text]" placeholder= "text").form-control
            .form-group
                input(type="text", name="comment[author]" placeholder = "author").form-control
            .form-group
                button(type="submit").btn-block.btn.btn-primary Submit Comment

        a(href="/campgrounds/"+campground._id) Go Back