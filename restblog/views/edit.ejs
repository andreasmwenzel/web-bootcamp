<%- include("partials/header") %>

<div class="ui main text segment container"> 
    <div class="ui huge header">Edit <%= blog.title %> </div>
    <form action="/blogs/<%= blog.id %>?_method=PUT" method="post" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image url" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="blog[body]"cols="30" rows="10" placeholder="Body goes here"><%= blog.body %> </textarea>
        </div>
        <button type="submit" class="ui button">Submit</button>
    </form>
</div>


<%- include("partials/footer") %>