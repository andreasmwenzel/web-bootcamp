<%- include("partials/header") %>
<div class = "ui main text container">
    <div class="ui huge header"> RESTful Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach((blog)=>{ %> 
                <div class="item">
                    <a href="/blogs/<%= blog.id %>" class="ui small image">
                        <img src="<%= blog.image %> " alt="">
                    </a>
                    <!-- <div class="image">
                        <img src="<%= blog.image %> " alt="">
                    </div> -->
                    <div class="content">
                        <a href="/blogs/<%= blog.id %>" class="header"><%= blog.title %> </a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <%- blog.body.substring(0,100) %>...
                        </div>
                    </div>
                </div>
            <% }) %></div>
    </div>
</div>
<h1>Index Page</h1>


<%- include("partials/footer") %>